<div class="content-header" ng-controller="sideCtrl">
    <p><a href="dash#!/stores"> {{store}} </a> / <a href="dash#!{{storeId}}/categories/">{{category[0].name}}</a>
        <a href="dash#!{{storeId}}/{{catId}}/product/"> / product</a></p>
    <a href="dash#!{{storeId}}/{{catId}}/products/add" class="btn pull-right">Add Product</a>
    <a href="dash#!{{storeId}}/{{catId}}/{{product._id}}/edit" class="btn pull-right">Edit</a>
    <a ng-click="delete()" class="btn pull-right">Delete</a>
</div>


<div class="product-wrapper row">

    <div class="col-md-6">
        product name: <strong>{{product.name}}</strong>
        <br>
        product price: <strong>{{product.price}}</strong>

        <br>
        product category: <strong>{{category[0].name}}</strong>
        <br>
        product in store:<strong> {{product.store[0].name}}</strong>
        <br><br>
        product desc: <p style="white-space: pre;">{{product.desc}}</p>

    </div>
    <div class="col-md-6">
        <img src='images/{{product.image}}' width="300px;"/>
    </div>
</div>

<a href="{{product.url}}">Order</a>